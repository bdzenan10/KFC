<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KFC.Kartica">
    <ContentPage.Content>
        <StackLayout Padding="30">
            <StackLayout Orientation="Horizontal">
                <Label Text="Broj kartice"></Label>
              
            </StackLayout>
            
            <Entry x:Name="broj" Placeholder="1234 5678 1234 5678" Text=""></Entry>
            <Label Text="Ime na kartici"></Label>
            <Entry x:Name="ime" Placeholder="Ex. John Wall" Text=""></Entry>
            <Label Text="Datum isteka"></Label>
            <Entry x:Name="datum" Placeholder="04/21" MaxLength="5" Text=""></Entry>
            <Label Text="Security Code"></Label>
            <Entry x:Name="kod" IsPassword="True" WidthRequest="50" Text=""></Entry>


            <Button Text="Plati" Clicked="Button_Clicked"></Button>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
                
                <Image Source="mastercard.png"></Image>
                <Image Source="visa.png"></Image>
            </StackLayout>
        </StackLayout>
      
    </ContentPage.Content>
</ContentPage>